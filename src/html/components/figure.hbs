<figure>
  {{#if @root.meta.release}}
  <picture>
    <source media="(max-width: 430px)" srcset="{{imgixWebP this.figure.src "430x"}}">
    <source media="(max-width: 1024px)" srcset="{{imgixWebP this.figure.src "1024x"}}">
    <source media="(min-width: 1024px)" srcset="{{imgixWebP this.figure.src}}">
    <img
      src="{{imgix this.figure.src}}"
      alt="{{this.figure.alt}}"
      loading="lazy" 
      width="{{this.figure.maxWidth}}px"
      height="{{this.figure.maxHeight}}px"
      style="width: 100%; max-width: {{this.figure.maxWidth}}px; height: auto">
  </picture>
  {{else}}
  <img
    src="{{this.figure.src}}"
    alt="{{this.figure.alt}}"
    loading="lazy"
    width="{{this.figure.maxWidth}}px"
    height="{{this.figure.maxHeight}}px"
    style="width: 100%; max-width: {{this.figure.maxWidth}}px; height: auto">
  {{/if}}
  <figcaption>{{this.figure.caption}}</figcaption>
</figure>